<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/update_user_details"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Update Users Details"
               android:layout_centerHorizontal="true"
               android:textColor="@color/colorBlack"
               android:textSize="30dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="180dp"
               ></TextView>

           <EditText
               android:drawableLeft="@drawable/personname"
               android:id="@+id/update_name"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/update_user_details"
               android:backgroundTint="@color/colorBlack"
               android:hint="Name"
               android:gravity="center"
               android:textColorHint="@color/colorBlack"
               android:layout_marginRight="35dp"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="50dp"
               android:maxLength="20"
               android:inputType="text"
               android:textColor="@color/colorBlack"
               ></EditText>


           <EditText
               android:drawableLeft="@drawable/phonenum"
               android:id="@+id/update_phone_number"
               android:outlineProvider="background"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/update_name"
               android:backgroundTint="@color/colorBlack"
               android:hint="Phone_Number"
               android:gravity="center"
               android:inputType="text"
               android:textColorHint="@color/colorBlack"
               android:layout_marginRight="35dp"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="35dp"
               android:maxLength="10"
               android:textColor="@color/colorBlack"
               ></EditText>


           <EditText
               android:drawableLeft="@drawable/password"
               android:id="@+id/update_password"
               android:outlineProvider="background"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/update_phone_number"
               android:backgroundTint="@color/colorBlack"
               android:hint="Password"
               android:gravity="center"
               android:inputType="textPassword"
               android:textColorHint="@color/colorBlack"
               android:layout_marginRight="35dp"
               android:layout_marginLeft="35dp"
               android:layout_marginTop="35dp"
               android:maxLength="10"
               android:textColor="@color/colorBlack"
               ></EditText>

           <Button
               android:id="@+id/update_button"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               app:cornerRadius="20dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/update_password"
               android:layout_marginTop="50dp"
               android:background="@drawable/edit_buttondd"
               android:text="Update"
               android:textSize="20dp"
               android:textColor="@color/colorWhite"
               ></Button>



       </RelativeLayout>




   </LinearLayout>


</ScrollView>