<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/image_about_us"
        android:layout_width="180dp"
        android:layout_height="180dp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/logoneventnew"
        android:backgroundTint="@color/colorWhite"
        ></ImageView>

    <TextView
        android:id="@+id/app_name_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Online Management System"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/image_about_us"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:id="@+id/info_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/app_name_about_us"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        ></TextView>

    <TextView
        android:id="@+id/contacts_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contacts"
        android:textSize="15dp"
        android:textStyle="normal"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/info_about_us"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        ></TextView>



</RelativeLayout>