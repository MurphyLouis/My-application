<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Adminpanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textAddnewevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD NEW EVENT"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/colorBlack"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">

            </TextView>

            <ImageView
                android:id="@+id/adminpaneladdevent"
                android:layout_below="@+id/textAddnewevent"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/addevent"
                android:backgroundTint="@color/colorBlack"
                android:layout_marginTop="15dp">
            </ImageView>


           <TextView
               android:id="@+id/eventdate"
               android:layout_below="@+id/adminpaneladdevent"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:backgroundTint="@color/colorBlack"
               android:hint="Event date"
               android:textColor="@color/colorBlack"
               android:textAlignment="center"
               android:paddingTop="20dp"/>


            <Button
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminpaneladdevent"
                android:layout_alignRight="@+id/eventdate"
                android:layout_marginStart="200dp"
                android:layout_marginTop="5dp"
                android:text="Datepick"
                android:textColor="@color/colorMaroon">

            </Button>

            <TextView
               android:id="@+id/eventtime"
               android:layout_below="@+id/eventdate"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:backgroundTint="@color/colorBlack"
               android:hint="Event time"
                android:textColor="@color/colorBlack"
               android:textAlignment="center"
               android:paddingTop="30dp"/>


            <Button
                android:id="@+id/timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/eventtime"
                android:layout_below="@+id/datepicker"
                android:layout_marginStart="200dp"
                android:layout_marginTop="5dp"
                android:text="Timepick"
                android:textColor="@color/colorMaroon">

            </Button>

            <EditText
                android:drawableLeft="@drawable/eventname"
                android:id="@+id/eventname"
                android:layout_below="@+id/eventtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/colorBlack"
                android:hint="Event name"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:inputType="text"
                android:layout_marginTop="30dp"/>

            <EditText
                android:drawableLeft="@drawable/locationevent"
                android:id="@+id/eventlocation"
                android:layout_below="@+id/eventname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:backgroundTint="@color/colorBlack"
                android:hint="Event location"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:inputType="text"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/eventDescription"
                android:layout_below="@+id/eventlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:backgroundTint="@color/colorBlack"
                android:hint="Event Price description"
                android:textAlignment="center"
                android:inputType="text"
                android:paddingTop="20dp"
                />
            <Button
                android:id="@+id/btnaddevent"
                android:layout_below="@+id/eventDescription"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:cornerRadius="9dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorButton"
                android:layout_gravity="center"
                android:text="ADD Event"
                android:textSize="15dp"
                android:textColor="@color/colorWhite">

            </Button>


        </RelativeLayout>
    </LinearLayout>







</ScrollView>